      {
        "name": "bootstrap system disk simulated",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/linux-administration/bootstrap_system_disk.py",
        "sudo": true,
        "args": [
          "${workspaceFolder}/linux-administration/bootstrap.yml",
          "partitions",
          "--set",
          "encrypted_single_disk_btrfs_arch",
          "--simulate",
          "${workspaceFolder}/linux-administration/simulated_disk.img",
          "--sim_size",
          "10G",
          "--overwrite_sim"
        ],
        "env": {}
      },
      {
        "name": "bootstrap system disk green usb",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/linux-administration/bootstrap_system_disk.py",
        "sudo": true,
        "args": [
          "${workspaceFolder}/linux-administration/bootstrap.yml",
          "partitions",
          "chroot",
          "--set",
          "green_usb_8GB",
          "-it"
        ],
        "env": {}
      },
      {
        "name": "bootstrap mount simulated",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/linux-administration/bootstrap_system_disk.py",
