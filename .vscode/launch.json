        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/linux-administration/bootstrap_system_disk.py",
        "sudo": true,
        "args": [
          "${workspaceFolder}/linux-administration/bootstrap.yml",
          "chroot",
          "--set",
          "mount_usb_multiboot"
        ],
        "env": {}
      },
      {
        "name": "bootstrap clean devices",
        "type": "debugpy",
        "request": "launch",
        "program": "${workspaceFolder}/linux-administration/bootstrap_system_disk.py",
        "sudo": true,
        "args": [
          "${workspaceFolder}/linux-administration/bootstrap.yml",
          "clean",
